.intro-banner
	@extend .text-center
	padding--x(30px, 35px)

	+breakpoint-lg()
		padding--x(45px, 150px)


	&__subtitle
		font-rem(18)
		line(26,18)
		color $white
		font-family $secondary-font-family
		font-weight 300

		+breakpoint-lg()
			font-rem(30)
			line(26,30)

	&__form
		width 100%
		max-width 1070px
		margin 23px auto 0  auto

		+breakpoint-lg()
			margin-top 56px
			flex-block()

	&__input
		margin-bottom 10px
		height 50px

		+breakpoint-lg()
			radius(5px 0 0 5px)
			width calc('100% - 180px')
			height 60px
			margin-bottom 0


	&__btn
		width 100%

		+breakpoint-lg()
			radius(0 5px 5px 0)
			display flex
			align-items center
			justify-content center
			max-width 180px

		&:hover
			padding--x(15px, 15px)
			background-color $color-highlighted
